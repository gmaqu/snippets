{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "lambda",
      "type": "pickString",
      "description": "Pick lambda to test",
      "options": ["lambda-1", "lambda-2"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: Current File (pick lambda)",
      "program": "${workspaceFolder}/lambdas/${input:lambda}/node_modules/jest/bin/jest.js",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}/lambdas/${input:lambda}"
    }
  ]
}
